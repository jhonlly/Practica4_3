<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_baja_codigo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.majada.jhona.practica4_3.BajaCodigo">

    <Button
        android:text="Salir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_baja_bajaporcod"
        android:layout_toRightOf="@+id/btn_baja_bajaporcod"
        android:layout_toEndOf="@+id/btn_baja_bajaporcod"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:id="@+id/btn_salir_bajaporcod"
        android:onClick="salir" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/et_codigo_bajaporcodigo"
        android:hint="Inserte codigo para eliminar" />

    <Button
        android:text="Baja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="54dp"
        android:id="@+id/btn_baja_bajaporcod"
        android:layout_below="@+id/et_codigo_bajaporcodigo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="bajaporcodigo" />
</RelativeLayout>
