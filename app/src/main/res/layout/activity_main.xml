<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.majada.jhona.practica4_3.MainActivity">

    <Button
        android:text="Alta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_alta"
        android:layout_above="@+id/btn_consulta_codigo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="alta" />

    <Button
        android:text="Consulta por codigo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_consulta_codigo"
        android:layout_above="@+id/btn_consulta_descrip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="consultaC" />

    <Button
        android:text="Consulta por descripciÃ³n"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_consulta_descrip"
        android:layout_above="@+id/btn_baja_codigo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="consultaD" />

    <Button
        android:text="Modificacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_modificacion"
        android:layout_marginBottom="136dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="modificar" />

    <Button
        android:text="Baja por codigo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_baja_codigo"
        android:layout_marginBottom="51dp"
        android:layout_alignBottom="@+id/btn_modificacion"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="bajaCodigo" />

    <Button
        android:text="Ver todos los registros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_ver_registros"
        android:layout_above="@+id/btn_consulta_codigo"
        android:layout_marginBottom="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="verRegistro" />

</RelativeLayout>
